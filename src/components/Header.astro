---
import DresanAnimalogo from "./SVG/DresanAnimalogo.astro"
import NavMenu from "./NavMenu.astro"
---

<header class="header">
	<a aria-label="Ir al inicio" href="/">
		<DresanAnimalogo class="animalogo" />
	</a>

	<NavMenu />
</header>

<style>
	.header {
		position: sticky;
		inset: 0;
		inset-block-end: unset;
		z-index: 10;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 12px 24px;
		border-block-end: 1px solid var(--stroke);
		background-color: hsl(var(--surface-hsl) / 0.8);
		backdrop-filter: blur(12px);
		transition: background-color 300ms;
	}

	@media screen and (min-width: 768px) {
		.header {
			position: fixed;
			inset-block-start: 24px;
			column-gap: 20px;
			inline-size: fit-content;
			padding-block: 8px;
			margin-inline: auto;
			border: 1px solid var(--stroke);
			border-radius: 12px;
		}
	}

	@media (hover: hover) {
		.animalogo {
			transition: opacity 300ms;
		}

		.animalogo:hover {
			opacity: 0.7;
		}
	}
</style>
