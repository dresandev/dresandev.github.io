---
import DresanAnimalogo from "~/components/SVG/DresanAnimalogo.astro"
import Rosette from "~/components/SVG/Rosette.astro"
import MouseIcon from "~/components/SVG/MouseIcon.astro"
---

<section class="wrapper">
	<h1 class="title">
		<span class="word">Dresan</span>
		<span class="word">
			Front-end
			<div class="decoration">
				<Rosette class="rosette" />
				<DresanAnimalogo class="animalogo" width="65" height="66" />
			</div>
		</span>

		<span class="word">Developer</span>
	</h1>

	<div class="bottom-area">
		<MouseIcon />
		<span>Desliza hacia abajo</span>
	</div>
</section>

<style>
	.wrapper {
		position: relative;
		display: flex;
		align-items: center;
		min-block-size: 100dvh;
	}

	.title {
		inline-size: 100%;
		padding-inline: clamp(1rem, 0.757rem + 1.036vw, 2rem);
		padding-block: 200px;
		font-family: "Clash Display";
		font-size: clamp(2.75rem, 1.279rem + 6.861vw, 9.375rem);
	}

	.word {
		display: flex;
		justify-content: center;
		line-height: normal;
	}

	.word:nth-child(2) {
		flex-wrap: wrap;
		column-gap: 16px;
		align-items: center;
	}

	.decoration {
		position: relative;
		inline-size: clamp(4.375rem, 3.495rem + 3.754vw, 8rem);
	}

	.rosette {
		block-size: auto;
	}

	.animalogo {
		position: absolute;
		inset: 0;
		margin: auto;
		inline-size: 51%;
		block-size: auto;
	}

	.bottom-area {
		position: absolute;
		inset-block-end: 40px;
		inset-inline-start: clamp(1rem, 0.757rem + 1.036vw, 2rem);
		display: flex;
	}

	@media screen and (min-width: 425px) {
		.word:nth-child(2) {
			justify-content: flex-start;
			column-gap: 32px;
		}

		.word:nth-child(3) {
			justify-content: flex-end;
		}
	}
</style>
